# iGSIM AI Agent Platform Environment Configuration
# Copy this file to .env and configure your settings

# Development Configuration
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_CREDENTIALS_PATH=path/to/firebase-credentials.json
FIREBASE_PROJECT_ID=bamboo-reason-483913-i4

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here

# AI Service API Keys (will be encrypted when stored)
GEMINI_API_KEY=your_gemini_api_key_here
XAI_API_KEY=your_xai_api_key_here
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# TLS/SSL Configuration
TLS_ENABLED=true
TLS_CERT_FILE=path/to/certificate.pem
TLS_KEY_FILE=path/to/private_key.pem
TLS_CA_FILE=path/to/ca_certificate.pem
TLS_VERIFY_MODE=required
TLS_MIN_VERSION=TLSv1.2
TLS_MAX_VERSION=TLSv1.3
TLS_CIPHERS=ECDHE+AESGCM:ECDHE+CHACHA20:DHE+AESGCM:DHE+CHACHA20:!aNULL:!MD5:!DSS

# Encryption Configuration
DATA_ENCRYPTION_ENABLED=true
FIELD_LEVEL_ENCRYPTION=true
ASYMMETRIC_ENCRYPTION=false
KEY_ROTATION_DAYS=90
ENCRYPTION_ALGORITHM=AES-256-GCM
KEY_DERIVATION_ITERATIONS=100000

# Security Configuration
ENFORCE_HTTPS=true
SECURE_COOKIES=true
CSRF_PROTECTION=true
RATE_LIMITING=true
API_KEY_ROTATION=true
AUDIT_LOGGING=true
SECURITY_HEADERS=true

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
FROM_EMAIL=your_email@gmail.com
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# Database Configuration
# (Firestore configuration is handled through Firebase settings)

# Monitoring and Analytics
# (Google Cloud Monitoring is configured through GCP settings)

